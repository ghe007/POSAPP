<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/stock_custom_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="80dp"
    app:cardCornerRadius="10dp"
    android:background="@drawable/addproduct_shape_bg"
android:layout_margin="5dp"
       >

    <RelativeLayout
         android:id="@+id/parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/custom_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:text="المنتج"
           android:layout_marginTop="2dp"
            android:maxWidth="100dp"
            android:textAlignment="center"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/custom_price_of_buy"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
android:layout_marginTop="2dp"
            android:layout_toStartOf="@id/custom_price_of_sell"
            android:text="سعر الشراء"

            android:gravity="center"
            android:textSize="@dimen/text_size" />

        <TextView
            android:id="@+id/custom_price_of_sell"
            android:layout_width="65dp"
            android:layout_height="wrap_content"


            android:background="@drawable/stock_rv_items_shape"
            android:text="سعر البيع"
            android:textAlignment="center"
            android:textSize="@dimen/text_size"

            android:layout_toStartOf="@id/custom_quantity"/>

        <TextView
            android:background="@drawable/stock_rv_items_shape"

            android:layout_marginEnd="10dp"
            android:id="@+id/custom_quantity"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:text="الكمية"
            android:textAlignment="center"
            android:layout_alignParentEnd="true"
            android:textSize="@dimen/text_size" />


    </RelativeLayout>


</com.google.android.material.card.MaterialCardView>